<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
    <servers>
        <server>
            <id>cs-snapshots</id>
            <username>${env.JFROG_USER}</username>
            <password>${env.JFROG_PASSWORD}</password>
        </server>
        <server>
            <id>cs-releaases</id>
            <username>${env.JFROG_USER}</username>
            <password>${env.JFROG_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>jfrog.io</id>
            <repositories>
                <repository>
                    <id>cs-snapshots</id>
                    <url>https://clearscoredev.jfrog.io/clearscoredev/libs-release</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>cs-releaases</id>
                    <url>https://clearscoredev.jfrog.io/clearscoredev/libs-snapshot-local</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>jfrog.io</activeProfile>
    </activeProfiles>
</settings>