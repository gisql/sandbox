<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
    <appender name="OUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <logger name="devmo">
        <level value="DEBUG"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="OUT"/>
    </root>
</configuration>
